<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="colorpalettegenerator.Controller">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#save" text="Save" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
            </items>
          </Menu>
          <Menu disable="true" mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#about" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ToolBar prefHeight="40.0">
        <items>
          <Button mnemonicParsing="false" onAction="#save" text="Save" />
        </items>
      </ToolBar>
      <SplitPane dividerPositions="0.75" VBox.vgrow="ALWAYS">
        <items>
            <ScrollPane minWidth="400.0" prefWidth="400.0">
              <content>
                <AnchorPane>
                     <children>
                        <Canvas fx:id="canvas1" height="200.0" width="200.0" />
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
            <ToolBar maxWidth="200.0" minWidth="150.0" orientation="VERTICAL">
              <items>
                <Button mnemonicParsing="false" onAction="#generate" text="Generate" />
              </items>
            </ToolBar>
        </items>
      </SplitPane>
      <HBox disable="true" />
   </children>
</VBox>
